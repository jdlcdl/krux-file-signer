#:kivy 2.2.1

<MainScreen>:    

	GridLayout:
		cols: 1
		rows: 2
			
    	Button:
			text: 'Sign'
			font_size: '20sp'
			background_color: 0, 0, 0, 0,
			color: 1, 1, 1, 1
			on_press:
				self.background_color = (.5, .5, .5, .5)
    		on_release:
				self.background_color = (0, 0, 0, 0)
				root.manager.transition.direction = 'left'
				root.manager.current = 'sign'
			canvas.before:
        		Color:
            		rgba: 1, 1, 1, 1
        		Line:
            		width: 0.5
            		rectangle: self.x, self.y, self.width, self.height
		
    	Button:
			text: 'Verify'
			font_size: '20sp'
			background_color: 0, 0, 0, 0
			color: 1, 1, 1, 1
			on_press:
				self.background_color = (.5, .5, .5, .5)
    		on_release:
				self.background_color = (0, 0, 0, 0)
				root.manager.transition.direction = 'left'
				root.manager.current = 'verify'
			canvas.before:
        		Color:
            		rgba: 1, 1, 1, 1
        		Line:
            		width: 0.5
            		rectangle: self.x, self.y, self.width, self.height

