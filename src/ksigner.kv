		Button:
			text: 'Back'
			font_size: root.height // 25
        	font_name: 'terminus.ttf'
			background_color: 0, 0, 0, 0,
			color: 1, 1, 1, 1
			on_press:
				self.background_color = (.5, .5, .5, .5)
    		on_release:
				self.background_color = (0, 0, 0, 0)
				root.manager.transition.direction = 'right'
				root.manager.current = 'main'
			canvas.before:
